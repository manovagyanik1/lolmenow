<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowTitleBackgroundStyle">@color/color700</item>
        <item name="android:statusBarColor">@color/color700</item>
    </style>

    <!-- custom styles from here on -->
    <style name="ReactionIcon">
        <item name="android:layout_width">@dimen/reactionWidth</item>
        <item name="android:layout_height">@dimen/reactionWidth</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="ReactionCount" parent="ReactionIcon">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
